{
    "name": "code4interactive/DataTable",
    "description": "Simple DataTable helper for Laravel",
    "keywords": ["DataTable", "DataGrid"],
    "homepage": "https://github.com/Code4/DataTable",
    "license": "MIT",
    "authors": [
        {
            "name": "Artur Bartczak",
            "email": "artur.bartczak@code4.pl"
        }
    ],
    "require": {
        "php" : ">=5.3.0",
        "illuminate/support" : ">=4.2",
        "illuminate/view" : ">=4.2"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "Code4\\DataTable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Code4\\DataTable\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}